<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_toLeftOf="@id/accept"
        android:id="@+id/card"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Aman Sharma"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:paddingBottom="3dp"
                android:id="@+id/colony"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:text="amanantonio1932815@gmail.com ssjbfjdffjsj"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/accept"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_toLeftOf="@id/reject"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_btn"
        tools:ignore="RtlCompat" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/reject"
        android:text="Reject"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:background="@drawable/background_btn_red"        />
</RelativeLayout>