<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#D17001</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <!-- Customize your theme here. -->
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Uploading...</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">8</item>
        <item name="android:background">@android:color/holo_orange_dark</item>

    </style>
<style name="ShapeAppearanceOverlay.MyApp.Button.Rounded"
    parent="">
    <item name="cornerFamily"
        >rounded</item>
    <item name="cornerSize">50%</item>
</style>
    <style name="SignUpTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#D17001</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/chat</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>