<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hey time"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/frndmsgtime"
            android:textSize="10sp"
            android:padding="5dp"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_frnd_msg_time"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the message"
            android:id="@+id/friendMsg"
            android:padding="5dp"
            android:background="@drawable/border_frnd_msg"
            android:textSize="17sp"
            android:visibility="invisible"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/black"
            android:layout_below="@id/frndmsgtime"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:id="@+id/frndmsgimage"
            android:scaleType="fitXY"
            android:layout_below="@id/frndmsgtime"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
    />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="450dp"
            android:id="@+id/mymsgimage"
            android:layout_below="@id/MyMsgTime"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hey time"
            android:id="@+id/MyMsgTime"
            android:textSize="10sp"
            android:padding="5dp"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_msg_time"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            />
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the message"
            android:id="@+id/MyMsg"
            android:padding="5dp"
            android:textSize="17sp"
            android:layout_marginRight="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:background="@drawable/border_my_msg"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/MyMsgTime"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            />
</RelativeLayout>