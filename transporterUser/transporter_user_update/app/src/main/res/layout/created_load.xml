<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"

        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        >

        <ImageView

            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/location_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCLLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Indore"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Type :-"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvCLMaterialType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Steel"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Contact :-"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvCLPickUpContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="123 palaciya"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Delivery Contact :-"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvCLDeliveryContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="456 Saket"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quntity :-"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvQuntity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10 ton"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/morevertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@drawable/more_vert" />

            <LinearLayout
                android:id="@+id/llCounter"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>