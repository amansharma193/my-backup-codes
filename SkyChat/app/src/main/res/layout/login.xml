<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_margin="40dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:background="@color/white"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvClose"
            android:textAlignment="textEnd"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/actionBarGreen"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="7dp"
            android:textColorHint="@color/actionBarGreen"
            android:background="@color/white"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:id="@+id/etLoginEmail"
          />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="7dp"
            android:inputType="textPassword"
            android:textColorHint="@color/actionBarGreen"
            android:background="@color/white"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/etLoginPassword"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_decorator"
            android:text="Login"
            android:textColor="@color/actionBarGreen"
            android:padding="10dp"
            android:id="@+id/btnLogin"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Forget password?"
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            android:id="@+id/tvForgetPassword"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need new account or"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/tvCreateNewAccount"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login with phone"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="18sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_decorator"
            android:text="Phone"
            android:textColor="@color/actionBarGreen"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnPhoneLogin"/>
    </LinearLayout>
  </LinearLayout>
</ScrollView>